<%= render 'layouts/errors', :object => @product %>

<%= form_for @product do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "ex. Cat Brush 2000x"%>
  </div>
  <div class="form-group">
    <%= f.label :cost %>
    <%= f.text_field :cost, class: "form-control", placeholder: "ex. 6.00, .05, 3885.99"%>
  </div>
  <div class="form-group">
    <%= f.label :country_of_origin %>
    <%= f.text_field :country_of_origin, class: "form-control", placeholder: "ex. USA, Japan"%>
  </div>
  <%= f.submit class: "btn btn-block" %>
<% end %>

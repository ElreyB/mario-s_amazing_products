<%= render 'layouts/errors', :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", rows: 4, cols: 50 %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%=  f.number_field :rating, class: "form-control", max: 5, min: 1, steps: 1 %>
  </div>
  <%= f.submit class: "btn-primary" %>
<% end %>
